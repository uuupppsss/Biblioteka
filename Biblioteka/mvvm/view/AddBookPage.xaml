<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteka.mvvm.view.AddBookPage"
             Title="AddBookPage">
    <StackLayout Padding="20">

        <Label Text="Название книги:"/>
        <Entry x:Name="TitleEntry" Placeholder="Введите название"/>

        <Label Text="Автор:"/>
        <Entry x:Name="AuthorEntry" Placeholder="Введите автора"/>

        <Label Text="Жанр:"/>
        <Picker x:Name="GenrePicker" Title="Выберите жанр">
            <Picker.Items>
                <x:String>Фантастика</x:String>
                <x:String>Детектив</x:String>
                <x:String>Роман</x:String>
                <x:String>Приключения</x:String>
                <x:String>Научная литература</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Количество страниц:"/>
        <Slider x:Name="PagesSlider" Minimum="50" Maximum="1000" />
        <Label x:Name="PagesLabel" Text="50 страниц"/>

        <Label Text="Дата публикации:"/>
        <DatePicker x:Name="PublishDatePicker"/>

        <Button Text="Сохранить" />
        <Button Text="Отмена" BackgroundColor="Red" TextColor="White"/>

    </StackLayout>
</ContentPage>