<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteka.mvvm.view.BookDetailPage"
             Title="BookDetailPage">
    <StackLayout Padding="20">
        <Button Text="Назад" />
        <Label Text="{Binding Title}" FontSize="24"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Автор: " FontSize="18"/>
            <Label Text="{Binding Book.Author}" FontSize="18"/>
        </StackLayout>
        <Label Text="{Binding Description}" FontSize="16"/>
    </StackLayout>
</ContentPage>